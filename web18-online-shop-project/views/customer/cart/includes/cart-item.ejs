<article class="cart-item">
	<div class="cart-item-info">
		<h2><%= cartItem.product.title  %></h2>
		<p><span class="cart-item-total-price"><%= cartItem.formattedTotalPrice  %></span> KRW <span class="cart-product-price">(<%= cartItem.product.formattedPrice  %> KRW)</span></p>
	</div>

	<form class="cart-item-management" data-productid="<%= cartItem.product._id %>" data-csrf="<%= locals.csrfToken  %>">
		<input name="cart-product-quantity" type="number" value="<%= cartItem.quantity %>" required>
		<button class="btn btn-alt">Update</button>
	</form>
</article>